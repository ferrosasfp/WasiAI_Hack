# ============================================
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
KEYS_ADMIN_TOKEN=your_admin_token_here
KEYS_BYPASS_ONCHAIN=true


# ============================================
# DATABASE (Neon Postgres)
# Get yours at: https://neon.tech/
# ============================================
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/neondb?sslmode=require


# ============================================
# PINATA / IPFS
# Get yours at: https://app.pinata.cloud/
# ============================================
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud
IPFS_GATEWAYS=https://gateway.pinata.cloud,https://ipfs.io,https://dweb.link
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
PINATA_JWT=your_pinata_jwt


# ============================================
# REDIS (Upstash)
# Get yours at: https://upstash.com/
# ============================================
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token


# ============================================
# CACHING / PROTECTED CONTENT
# ============================================
PROTECTED_CACHE_PRIVATE=true
PROTECTED_CACHE_MAX_AGE=60
PROTECTED_CACHE_IMMUTABLE=false
PROTECTED_ENABLE_ETAG=true
PROTECTED_ENABLE_RANGE=true
KEYS_CACHE_TTL_MS=60000
PROTECTED_CACHE_TTL_MS=120000


# ============================================
# DRAFTS / UPLOAD
# ============================================
DRAFT_TTL_SECONDS=21600
NEXT_PUBLIC_SLUG_RESERVE_ATTEMPTS=5
NEXT_PUBLIC_SLUG_RESERVE_TIMEOUT_MS=6000
NEXT_PUBLIC_MAX_SIZE_MB_PROTECTED=250
NEXT_PUBLIC_MAX_SIZE_MB_UNPROTECTED=500
ALLOW_CLIENT_KEYS_PUT=true


# ============================================
# FETCH / RETRIES
# ============================================
PROTECTED_KEY_LOOKUP_RETRIES=6
PROTECTED_KEY_LOOKUP_DELAY_MS=1200
IPFS_FETCH_TIMEOUT_MS=8000
IPFS_FETCH_RETRIES=3
NEXT_PUBLIC_PROTECTED_FETCH_RETRIES=3
NEXT_PUBLIC_PROTECTED_FETCH_RETRY_DELAY_MS=1000
NEXT_PUBLIC_STEP3_UPLOAD_RETRIES=3
NEXT_PUBLIC_STEP3_UPLOAD_RETRIES_LARGE=1
NEXT_PUBLIC_STEP3_UPLOAD_DEADLINE_MS=900000


# ============================================
# METRICS
# ============================================
METRICS_ENABLED=true
METRICS_TOKEN=your_metrics_token


# ============================================
# EXTERNAL APIs
# ============================================
HUGGINGFACE_API_TOKEN=hf_your_huggingface_token
X402_MOCK_MODE=false


